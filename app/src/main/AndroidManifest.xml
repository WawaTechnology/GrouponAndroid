<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easybuy.sg.grouponebuy">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:name=".activities.MyApplication"

        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher_foreground"
        android:installLocation="auto"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/Widget.AppCompat.Button">
        <meta-data
            android:name="com.easybuy.sg.grouponebuy.utils.LimitCacheSizeGlideModule"
            android:value="GlideModule" />

        <activity android:name=".activities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">


        </activity>
        <activity android:name=".activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>></activity>
        <activity android:name=".activities.SettingActivity"></activity>
        <activity android:name=".activities.ProductDetailActivity"></activity>
        <activity android:name=".activities.AboutUsActivity"></activity>
        <activity android:name=".activities.CustomerServiceActivity"></activity>
        <activity android:name=".activities.SignUpActivity"></activity>
        <activity android:name=".activities.SignInActivity"></activity>
        <activity android:name=".activities.DistrictSettingActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".activities.ChangePasswordActivity"></activity>
        <activity android:name=".activities.EditInfoActivity"></activity>
        <activity android:name=".activities.OrderDetailActivity"></activity>
        <activity android:name=".activities.SearchActivity"></activity>
        <activity android:name=".activities.SpecialCategoryLayout"></activity>
        <activity android:name=".activities.ProductActivity"></activity>
        <activity android:name=".activities.SpecialSaleLayout"></activity>
        <activity android:name=".activities.ChangeLanguageActivity"></activity>

    </application>

</manifest>