<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="usermodel"
        type="com.easybuy.sg.grouponebuy.model.User"></variable>
    <variable
        name="presenter"
        type="com.easybuy.sg.grouponebuy.Presenter.ClickPresenter"></variable>
</data>


<LinearLayout


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/signUp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/black"


            android:layout_marginLeft="-24dp"
            android:textSize="17sp"/>

    </LinearLayout>
    <ImageView
        android:background="@color/new_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"

        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_centerHorizontal="true"

            android:text="@string/name"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"


            android:text="@={usermodel.userName}"

            android:inputType="text"

            android:id="@+id/name"
            android:layout_marginRight="36dp"
            android:background="@drawable/table_noround"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"


            android:layout_centerHorizontal="true"

            android:text="@string/email"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"


            android:layout_marginRight="36dp"
            android:inputType="textEmailAddress"
            android:text="@={usermodel.email}"

            android:id="@+id/email"
            android:background="@drawable/table_noround"
            />

    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Get Code"
        android:id="@+id/get_code_button"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:background="@color/blue"
        android:padding="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"

        android:layout_gravity="right"
        android:layout_marginRight="36dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"


            android:text="Verification Code:"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"

            android:id="@+id/verification_code"
            android:background="@drawable/table_noround"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verificationStatus"
                android:visibility="gone"


                android:layout_alignRight="@id/verification_code"
                android:layout_alignBottom="@id/verification_code"
                android:src="@drawable/ic_check_box_green_24dp"/>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"



            android:layout_centerHorizontal="true"

            android:text="@string/phone"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"

            android:layout_weight="1"


            android:layout_marginRight="36dp"
            android:inputType="number"
            android:text="@={usermodel.phone}"

            android:id="@+id/phone"
            android:background="@drawable/table_noround"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"


            android:layout_centerHorizontal="true"

            android:text="@string/password"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="36dp"
            android:inputType="textPassword"
            android:text="@{usermodel.password}"
            android:background="@drawable/table_noround"


             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"


            android:layout_centerHorizontal="true"

            android:text="@string/confirm"/>

        <EditText
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="36dp"
            android:layout_weight="1"

            android:background="@drawable/table_noround"
            android:inputType="textPassword"



             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"


            android:layout_centerHorizontal="true"

            android:text="@string/postcode"/>

        <EditText
            android:id="@+id/postcode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/table_noround"
            android:inputType="number"
            android:text="@{usermodel.postcode}"



             />

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"


        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:id="@+id/submit"
        android:padding="4dp"
        android:textSize="18sp"
        android:background="@color/red"
        android:textAlignment="center"
        android:textColor="#fff"

        android:onClick="@{(v)->presenter.onButtonClick()}"

        android:text="@string/signUp"/>







</LinearLayout>
</layout>