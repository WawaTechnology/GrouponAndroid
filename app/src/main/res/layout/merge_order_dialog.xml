<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="EBuyMart Notification"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="We find that you have order to be delivered.Would you like to merge the selected products into your exisiting orders ?"/>
<!--
  <android.support.v7.widget.RecyclerView
      android:layout_marginTop="8dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/select_daterecycler"></android.support.v7.widget.RecyclerView>
      -->
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/order_1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@drawable/date_selector"

        android:background="@drawable/button_rectangle"


        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/order_2"
        android:textColor="@drawable/date_selector"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:background="@drawable/button_rectangle"


        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@drawable/date_selector"

        android:id="@+id/order_3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_rectangle"


        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/no_order"
        android:textColor="@drawable/date_selector"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_rectangle"
        android:text="No,Create New Order"
        android:layout_marginBottom="24dp"
        />





</LinearLayout>