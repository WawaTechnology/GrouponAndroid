<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"

    android:focusableInTouchMode="true"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@android:color/black"
            android:text="@string/feedback"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="-24dp"
            android:textSize="17sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/new_grey"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/online_message"/>
    <EditText
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:id="@+id/advice_msg"



        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/table_bkg"/>
    <Button
        android:layout_marginTop="12dp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/submit"
        android:textAlignment="center"
        android:text="@string/submit"
        android:textColor="#fff"
        android:background="@drawable/red_wholerectangle"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/new_grey"
        android:layout_marginTop="8dp"
        ></View>

    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginTop="12dp"
     android:text="@string/customer_service_tel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/customer_service_time"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/new_grey"
        android:layout_marginTop="8dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/assistant"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wechat : EbuyAssistant"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID : EbuyAssistant"
                />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/scan"/>












</LinearLayout>
</ScrollView>